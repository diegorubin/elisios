source 'https://rubygems.org'

# Core
gem 'rails', '4.2.0'

# database
gem 'sqlite3'

# front-end
gem 'sass-rails', '~> 5.0'
gem 'bootstrap-sass', '~> 3.3.1'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
gem 'autoprefixer-rails'

# html pre processor
gem 'haml'

# generate json
gem 'jbuilder', '~> 2.0'

# documentation
gem 'sdoc', '~> 0.4.0', group: :doc

# javascript dependences control
gem 'bower-rails'

# helpers for forms
gem 'formtastic', '2.2.1'
gem 'formtastic-bootstrap', '~> 3.0.0'

group :development, :test do
  # disable asset pipeline logs
  gem 'quiet_assets'

  # application profile
  gem 'ruby-prof'

  # debugging
  gem 'byebug'
  gem 'web-console', '~> 2.0'

  # deploy
  gem 'capistrano-rails'

  # development optimization
  gem 'spring'

  # code style
  gem 'rubocop'

  # integration tests
  gem 'database_cleaner', '1.4.0'
  gem 'cucumber-rails', require: false

  # bdd, tdd and unit tests
  gem 'rspec-rails'
  gem 'jasmine'
  gem 'guard'
  gem 'guard-jasmine'
  gem 'guard-rspec', require: false
end
